<% include _header.ejs %>
<h1 class="ejs-logging-h1">Register</h1>
  <form class="ejs-form" action="/signup" method="post">
    <input name="username" type="text" placeholder="Email" required autofocus>
    <input name="password" type="password" placeholder="Password" required>
    <input class="input-button" type="submit" value="Sign Up" >
  </form>
  <% if (message !== undefined) { %>
    <p><%= message %></p>
  <% } %>
</body>
</html>
